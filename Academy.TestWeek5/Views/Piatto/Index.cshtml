@model IEnumerable<Piatto>
@*@{ ViewData["NumPiatti"] = Model.Count();}*@
@{ ViewBag.NumPiatti = Model.Count();}

@if (User.IsInRole("Ristoratore"))
{

<div>
    <a asp-action="Create">New Piatto</a>
</div>
}




<table class="table" border="1" height="600">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Descrizione</th>
            <th>Tipologia</th>
            <th>Prezzo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>@item.Id</td>
    <td>@item.Nome</td>
    <td>@item.Descrizione</td>
    <td>@item.Tipologia</td>
    <td>@item.Prezzo</td>
    <td>

        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })

    </td>
</tr>}

    </tbody>
    <tfoot>
        <tr>
            <td># Piatti</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            @*<td>@ViewData["NumPiatti"]</td>*@
            <td>@ViewBag.NumPiatti</td>
        </tr>
    </tfoot>
</table>